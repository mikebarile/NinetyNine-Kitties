
<h1> WHAT A GREAT CAT!!! </h1>

<table>
  <tr>
    <th> Name: </th>
    <td><%= @cat.name %></td>
  </tr>

  <tr>
    <th> Birthday: </th>
    <td><%= @cat.birth_date %></td>
  </tr>

  <tr>
    <th> Age: </th>
    <td><%= @cat.age %></td>
  </tr>

  <tr>
    <th> Sex: </th>
    <td><%= @cat.sex %></td>
  </tr>

  <tr>
    <th> Color: </th>
    <td><%= @cat.color %></td>
  </tr>

  <tr>
    <th> Description: </th>
    <td><%= @cat.description %></td>
  </tr>
</table>

<br/>
<hr />
<strong>Kitty requests!</strong>
<table>
  <tr>
    <th> Start date </th>
    <th> End date </th>
    <th> Status </th>
  </tr>

  <% @kitty_requests.each do |kitty_request| %>
  <tr>
    <td><%= kitty_request.start_date %></td>
    <td><%= kitty_request.end_date %></td>
    <td><%= kitty_request.status %></td>
  </tr>
  <% end %>
</table>
<% if @kitty_requests.empty? %>
  No kitty requests!!!!!!!!! :D :D :D
<% end %>

<br/>
<br/>

