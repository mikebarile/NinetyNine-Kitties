<h1>RENT A CAT!!!</h1>

<form method="post" action="/cat_rental_requests">
<select name="cat_rental_request[cat_id]">
  <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
  <% end %>
</select>

<br/>
<br/>

<label for="start-date">Start date: </label>
<input name="cat_rental_request[start_date]" id="start-date" type="date"/>

<br/>
<br/>

<label for="end-date">End date: </label>
<input name="cat_rental_request[end_date]" id="end-date" type="date"/>

<br/>
<br/>

<button> SUBMIT </button>
</form>
